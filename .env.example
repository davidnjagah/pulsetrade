# ==============================================
# PulseTrade Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ==============================================
# Supabase Configuration (Required)
# ==============================================
# Get these from your Supabase project settings
# https://supabase.com/dashboard/project/_/settings/api

# Public URL for Supabase project
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Public anon key (safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (server-side only, NEVER expose to client)
# This key bypasses Row Level Security - use with caution
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==============================================
# Price Feed Configuration
# ==============================================

# Helius RPC API Key (for Solana price data)
# Get from: https://helius.xyz/
HELIUS_API_KEY=your-helius-api-key-here

# Helius WebSocket URL (optional, defaults to mainnet)
HELIUS_WS_URL=wss://atlas-mainnet.helius-rpc.com

# Pyth Network endpoint (optional fallback)
PYTH_ENDPOINT=wss://hermes.pyth.network/ws

# Birdeye API Key (optional fallback for price data)
BIRDEYE_API_KEY=your-birdeye-api-key-here

# ==============================================
# Application Configuration
# ==============================================

# Environment mode
NODE_ENV=development

# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable demo mode (no real money)
NEXT_PUBLIC_DEMO_MODE=true

# Default starting balance for demo accounts (USD)
NEXT_PUBLIC_DEMO_BALANCE=1000

# ==============================================
# Feature Flags
# ==============================================

# Enable mock price feed (for development without real data)
NEXT_PUBLIC_USE_MOCK_PRICES=true

# Enable chat feature
NEXT_PUBLIC_ENABLE_CHAT=true

# Enable leaderboard feature
NEXT_PUBLIC_ENABLE_LEADERBOARD=true

# ==============================================
# Security & Rate Limiting
# ==============================================

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window per user
RATE_LIMIT_MAX_REQUESTS=100

# Bet cooldown in milliseconds
BET_COOLDOWN_MS=500

# ==============================================
# Monetization Configuration
# ==============================================

# House edge percentage (0.20 = 20%)
HOUSE_EDGE=0.20

# Platform fee on winnings (0.05 = 5%)
PLATFORM_FEE_RATE=0.05

# ==============================================
# Betting Limits
# ==============================================

# Minimum bet amount
MIN_BET=1

# Maximum bet amount
MAX_BET=100

# Maximum active bets per user
MAX_ACTIVE_BETS=20

# Maximum single payout
MAX_SINGLE_PAYOUT=10000

# Maximum daily payout per user
MAX_DAILY_PAYOUT_PER_USER=50000

# ==============================================
# Wallet Connection Configuration
# ==============================================

# Solana Network: 'mainnet-beta', 'devnet', or 'testnet'
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Solana RPC Endpoint (for wallet transactions)
# Use Helius for better reliability, or public endpoint for testing
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# WalletConnect Project ID (for MetaMask and EVM wallets)
# Get your project ID at: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ==============================================
# Analytics & Monitoring (Optional)
# ==============================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry DSN for error tracking
SENTRY_DSN=

# ==============================================
# Development Tools
# ==============================================

# Enable detailed logging
DEBUG=false

# Show development tools in UI
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
